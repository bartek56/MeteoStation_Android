<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_records2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bartek.meteostation.Records2"
    tools:showIn="@layout/activity_records2"
    android:background="@drawable/background"
    android:textColor="@color/colorText"

    >


    <TextView
        android:id="@+id/tDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="20sp"
        />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:textColor="@color/colorText"

        >


    <TableRow

        android:gravity="center_horizontal"
        >

            <TextView
                android:text=""
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_width="wrap_content"
                android:textColor="@color/colorText"

                />
        <TextView
            android:text="    "
            android:padding="3dip"
            android:background="@drawable/border"
            android:layout_width="wrap_content"
            android:textColor="@color/colorText"

            />

        <TextView
            android:textColor="@color/colorText"
            android:text="Value"
            android:padding="3dip"
            android:background="@drawable/border"
            android:layout_width="wrap_content"

            />
        <TextView
            android:textColor="@color/colorText"
            android:text="Time"
            android:gravity="center"
            android:padding="3dip"
            android:background="@drawable/border"
            />
        </TableRow>


        <TableRow

            android:gravity="center_horizontal"
            >


            <TextView
                android:textColor="@color/colorText"
                android:text="Temperature IN"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"

                />
            <TextView
                android:textColor="@color/colorText"
                android:text="MIN"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />
            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinTemperatureInValue"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinTemperatureInTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >
            <TextView
                android:textColor="@color/colorText"
                android:text="MAX"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxTemperatureInValue"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxTemperatureInTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >


            <TextView
                android:textColor="@color/colorText"
                android:text="Temperature OUT"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"

                />
            <TextView
                android:textColor="@color/colorText"
                android:text="MIN"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />
            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinTemperatureOutValue"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinTemperatureOutTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >
            <TextView
                android:textColor="@color/colorText"
                android:text="MAX"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxTemperatureOutValue"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
            />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxTemperatureOutTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >


            <TextView
                android:textColor="@color/colorText"
                android:text="Pressure"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"

                />
            <TextView
                android:textColor="@color/colorText"
                android:text="MIN"
                android:gravity="right"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />
            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinPressureValue"
                android:gravity="right"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxPressureTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>
        <TableRow

            android:gravity="center_horizontal"
            >

            <TextView
                android:textColor="@color/colorText"
                android:text="MAX"
                android:gravity="right"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                android:id="@+id/textView" />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxPressureValue"
                android:gravity="right"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinPressureTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />


        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >


            <TextView
                android:textColor="@color/colorText"
                android:text="Humidity"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"

                />
            <TextView
                android:textColor="@color/colorText"
                android:text="MIN"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />
            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinHumidityValue"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMinHumidityTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            >
            <TextView
                android:textColor="@color/colorText"
                android:text="MAX"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxHumidityValue"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/tMaxHumidityTime"
                android:gravity="center"
                android:padding="3dip"
                android:background="@drawable/border"
                android:layout_column="1"
                />

        </TableRow>




    </TableLayout>


</LinearLayout>
